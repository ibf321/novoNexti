<%= form_for(@colaborador) do |f| %>
  <% if colaborador.errors.any? %>
<center>
  <div id="error_explanation" class="alert alert-danger" style="width: 500px">
      <h2><%= pluralize(colaborador.errors.count, "erro(s)") %> encontrado(s):</h2>


      <% colaborador.errors.full_messages.each do |message| %>
       <p><%= message %></p>
      <% end %>

  </div>
</center>
  <% end %>


  <br>
  <div class="container-fluid col-xl-4 rounded border border-secondary" style="background-color: #FAFAFA;">
      <h1 align="center" class="enunciado">Colaborador</h1>
    <br>
    <form >
      <div class="form-group row" >
          <label class="col-sm-4 col-form-label textolabels">Nome Completo</label>
          <div class="col-md-8">
            <%= f.text_field :nomecompleto, class: "form-control" %>
          </div>
      </div>
        <div class="form-group row" >
          <label class="col-sm-4 col-form-label textolabels">Telefone</label>
            <div class="col-md-8">
              <%= f.text_field :telefone, class: "form-control" %>
            </div>
          </div>
        <div class="form-group row">
          <label class="col-sm-4 col-form-label textolabels">Endere√ßo</label>
          <div class="col-md-8" >
            <%= f.text_field :endereco, class: "form-control" %>
          </div>
        </div>
          <div class="form-group row">
            <label class="col-sm-4 col-form-label textolabels">Nome reduzido</label>
            <div class="col-md-8">
              <%= f.text_field :nomereduzido, class: "form-control" %>
            </div>
          </div>

   </form>


  <div align="center">
    <%= f.submit "Salvar", :class => 'btn btn-success btn-sm'%>
    <%= link_to 'Voltar', colaboradors_path, :class => 'btn btn-warning btn-sm'%>
  </div>
<% end %>
<br>
</div>
