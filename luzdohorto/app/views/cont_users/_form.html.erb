<%= form_for(user) do |f| %>
  <% if user.errors.any? %>
<center>
  <div id="error_explanation" class="alert alert-danger" style="width: 500px">
      <h2><%= pluralize(user.errors.count, "erro(s)") %> encontrado(s):</h2>
      <% user.errors.full_messages.each do |message| %>
       <p><%= message %></p>
      <% end %>
      isamel
  </div>
</center>
  <% end %>

  <br>
  <div class="container-fluid col-xl-4 rounded border border-secondary" style="background-color: #FAFAFA;">
      <h1 align="center" class="enunciado">Usuário</h1>
    <br>
    <form >
    <div class="form-group row" >
          <label class="col-sm-4 col-form-label textolabels">Email</label>
          <div class="col-md-8">
            <%= f.text_field :email, class: "form-control" %>
          </div>
      </div>
      <div class="form-group row" >
          <label class="col-sm-4 col-form-label textolabels">Nome</label>
          <div class="col-md-8">
            <%= f.text_field :username, class: "form-control" %>
          </div>
      </div>
        <div class="form-group row" >
          <label class="col-sm-4 col-form-label textolabels">Senha</label>
            <div class="col-md-8">
              <%= f.text_field :password, class: "form-control" %>
            </div>
          </div>
        <div class="form-group row">
          <label class="col-sm-4 col-form-label textolabels">Confirmação de Senha</label>
          <div class="col-md-8" >
            <%= f.text_field :password_confirmation, class: "form-control" %>
          </div>
        </div>
          <div class="form-group row">
            <label class="col-sm-4 col-form-label textolabels">Role</label>
            <div class="col-md-8">
              <%= f.text_field :role, class: "form-control" %>
            </div>
          </div>
   </form>


  <div align="center">
    <%= f.submit "Salvar", :class => 'btn btn-success btn-sm'%>
    <%= link_to 'Voltar', users_index_path(user.id), :class => 'btn btn-warning btn-sm'%>
  </div>
<% end %>
<br>
</div>
