<div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="page-header">
          <h1 align="center" class="enunciado">Lista de Usuários</h1>
        </div>
      </div>
    </div>

<div class="row">
    <div class="col-lg-12">
      <table class="table table-striped">
        <div class="center" align="center">
        <%= link_to 'Novo', "/admin/user/new" , :class => 'btn btn btn-info' %>
        <div>

          <br>

        <thead>
          <tr>
            <th width="150"><p align="center">Usuário</p></th>
            <th width="150"><p align="center">Tipo de Usuário</p></th>
            <th width="150"><p align="center">E-Mail</p></th>
            <th width="150"><p align="center">Tipo</p></th>
          </tr>
        </thead>
        <tbody>
        <% @users.each do |user| %>
          <tr class="conteudotabela">
            <td align="center"><%= user.username %></td>
            <td align="center"><%= user.role %></td>
            <td align="center"><%= user.email %></td>
            <!-- <td align="center"><%=link_to 'Editar', "/admin/user/#{user.id}/edit" , class: 'btn btn-warning'%></td> -->
            <td align="center"><%=link_to 'Editar',  "/admin/user/#{user.id}/edit"  , class: 'btn btn-warning'%></td>
          </td>
        </tr>

          <% end %>
      </tbody>
    </table>

  </div>
